<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="userDataProvider" class="coupling.IOC.UserDatabaseProvider"/>
    <bean id="NewDatabaseProvider" class="coupling.IOC.NewDatabaseProvider"/>
    <bean id="MongoDBServiceDataProvider" class="coupling.IOC.MongoDBServiceDataProvider"/>
    <bean id="WebServiceDataProvider" class="coupling.IOC.WebServiceDataProvider"/>

    <bean id="userManagerWithUserDataProvider" class="coupling.IOC.UserManager">
        <constructor-arg ref="userDataProvider"/>
    </bean>
    <bean id="userManagerWithNewDataProvider" class="coupling.IOC.UserManager">
        <constructor-arg ref="NewDatabaseProvider"/>
    </bean>
    <bean id="userManagerWithMongoDBDataProvider" class="coupling.IOC.UserManager">
        <constructor-arg ref="MongoDBServiceDataProvider"/>
    </bean>
    <bean id="userManagerWithWebServiceDataPerovider" class="coupling.IOC.UserManager">
        <constructor-arg ref="WebServiceDataProvider"/>
    </bean>

</beans>